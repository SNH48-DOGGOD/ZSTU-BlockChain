		<div class="trans">
		<!-- 区块链详情内容区 -->
	    <section class="profile container blockBg" style="font-size: 12px;">
			<div class="row">
				<div class="clearfix">
					<div class="col-sm-3"></div>
					<div class="btn-primary notory-user col-sm-6">
						<span><i class="glyphicon glyphicon-user notoryFont"></i></span>
						<div>账户:&nbsp;<span id="account"><%-account%></span></div>
						<div style="margin-left: 55px">人民币:&nbsp;<span id="balance"><%-aBalance%> </span></div>
						<div style="margin-left: 55px">美元:&nbsp;<span id="balance" ><%-bBalance%> </span></div>
						<div style="margin-left: 55px">日元:&nbsp;<span id="balance"><%-cBalance%> </span></div>
					</div>
				</div>
				<div style="margin-top: 10px;">
					<!--<div class="notoryBegin">开启挖矿</div>-->
					<form class="form-horizontal" enctype="multipart/form-data" id="form3">
						<div class="form-group notoryHasPos">
							<label class="col-sm-3 control-label"></label>
								<div class="col-sm-6" style="position: relative;">
									<input type="text" class="form-control" id="give" name="sender" placeholder="捐赠者">
									<span><i class="glyphicon glyphicon-user glyphicon-user-0"></i></span>
									<div class="content-give">
										<table>
											<tr style="border: 1px solid lightgray"><td class="account1"><%-account%></td></tr>
										</table>
									</div>
								</div>
						</div>
							<div class="form-group notoryHasPos">
								<label class="col-sm-3 control-label"></label>
								<div class="col-sm-6" style="position: relative;">
									<input type="text" class="form-control" id="res" name="reciever" placeholder="受赠者">
									<span><i class="glyphicon glyphicon-user glyphicon-user-1"></i></span>
									<div class="content-res">
										<table>
											<%accounts.forEach(function(account){%>
												<tr style="border: 1px solid lightgray;"><td class="account2"><%-account%></td></tr>
										    <%})%> 
										</table>
									</div>
								</div>
							</div>
							<div class="form-group notoryHasPos">
								<label class="col-sm-3 control-label"></label>
								<div class="col-sm-6">
									<input type="text" class="form-control" id="ether" name="ether" placeholder="资金数量"></input>
									<span><i class="glyphicon glyphicon-usd glyphicon-user-2"></i></span>
								</div>
							</div>
							<div class="form-group notoryHasPos">
							<label class="col-sm-3 control-label"></label>
							<div class="col-sm-6">
								<select class="form-control" id="sort">
									<option selected="selected">选择货币种类</option>
									<option>人民币</option>
									<option>美元</option>
									<option>日元</option>
								</select>
								<br>
								<input class="btn btn-info " type="button" onclick="sendTransaction()" value="赠送">
							</div>
							</div>
						</form>
					</div>
				</div>
				<!-- /row -->
			</section>
		</div>
