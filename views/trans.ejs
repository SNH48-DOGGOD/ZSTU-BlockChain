	<script type="text/javascript" src="/javascripts/main.js"></script>
	<script type="text/javascript">
		$("#give").focus(function(){
			$(".content-give").show();
		})

		$(".account1").click(function(){
			var account = $(this).html();
			$("#give").val(account);
			$(".content-give").hide();
		})

		$("#res").focus(function(){
			$(".content-res").show();
		})

		$(".account2").click(function(){
			var account = $(this).html();
			$("#res").val(account);
			$(".content-res").hide();
		})

		function sendTransaction(){
			var account1 = $("#give").val();
			var account2 = $("#res").val();
			var amount = $("#ether").val();
			var sort = $("#sort").val();
			
			console.log(account1,account2,amount,sort);
			$.post("/send",{account1:account1,account2:account2,amount:amount,sort:sort},function(result){
				console.log(result);
			})
		}
	</script>
